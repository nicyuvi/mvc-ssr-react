{
  // for vite
  "compilerOptions": {
    /* Environment */
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    /* Bundle */
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "isolatedModules": true, // required for vite
    "moduleDetection": "force" // nice to have for vite
  },
  "include": ["vite.config.ts"]
}
